            font_size: '40sp'
        Button:
            text: 'Back'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current='menu'

<Settings>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 30
        padding: 30

        Label:
            text: 'Settings\nwindow'
            size: self.texture_size
            pos_hint: {'center_x': .5, 'center_y': .5}
            font_size: '40sp'
        Button:
            text: 'Back'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current='menu'
